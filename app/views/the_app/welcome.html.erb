<% provide(:title, 'Schemer') %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => nil, :class => "form-inline" }) do |f| %>
<div class="form-group">
<div class="col-md-3">
  <label class="sr-only" for="InputEmail">Email address</label>
  <%= f.email_field :email, :class => "form-control", :placeholder => "Email",:id => "InputEmail" %>
</div>
</div>
<div class="form-group">
<div class="col-md-3">
  <label class="sr-only" for="InputPassword">Passowrd</label>
  <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
</div>
</div>
  <%= f.submit "Sign in", class: "btn btn-fix btn-red-fix" %>
  <div class="sign-in-fix">
    <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "checkbox" %>
    <% end -%> 
    <span class="help-inline"><%= link_to "Forgot your password?", new_password_path('user') %></span>
  </div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
<%= devise_error_messages! %>
  <!-- Modal -->
  <div id="sign-up" class="modal fade sign-up-fix" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3 id="myModalLabel">Sign Up for Schemer</h3>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, :class => "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.text_field :name, :placeholder =>"Name", :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, :class => "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.email_field :email, :placeholder =>"Email", :id => "id_model_email", :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, :class => "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.password_field :password, :placeholder =>"Password", :id => "id_model_password", :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, :class => "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, :placeholder =>"Confirmation", :class => "form-control" %>
            </div>
          </div>
        </div><!-- /.modal-body -->
        <div class="modal-footer">
          <button type="button" class="btn btn-fix btn-gray-fix" data-dismiss="modal">Cancel</button>
          <%= f.submit "Sign up", class: "submit btn btn-fix btn-green-fix", type: "button" %>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
  <a data-toggle="modal" href="#sign-up" class="btn btn-fix btn-green-fix">Sign up</a>
<% end %>