<li class="media li-media-fix">
	<div class="row">
		<div class="col-md-2">
	  		<%= image_tag(user.image_url(:normal), alt: user.name, class: "gravatar") %>
		</div>
		<div class="col-md-3">
	 	 <%= link_to user.name, user %>
	 	 <% if current_user.has_role? :admin && !current_user == user %>
	   		 <%= link_to "delete", user, method: :delete, date: {confirm: "You sure?"} %>
	 	 <% end %>
		</div>
		<div class="col-md-4">
		  <%= user.email %>
		</div>
		<div class="col-md-3">
		  <%= user.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
		</div>
	</div>
</li>